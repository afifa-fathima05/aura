rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for authenticated users
    // In production, you should make these rules more restrictive
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to events (for public website)
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public write access to contact forms and membership applications
    match /contact_submissions/{contactId} {
      allow read: if request.auth != null;
      allow write: if true;
    }
    
    match /membership_applications/{applicationId} {
      allow read: if request.auth != null;
      allow write: if true;
    }
    
    // Test collection for diagnostics
    match /test/{testId} {
      allow read, write: if true;
    }
  }
}
